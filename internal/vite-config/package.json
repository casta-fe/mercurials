    "lint:eslint": "TIMING=1 eslint \"*.{js,jsx,ts,tsx,md,json}\" --fix",
    "lint:prettier": "prettier --write \"*.{js,ts,jsx,tsx,md,json}\"",
    "clean": "run-p clean:**",
